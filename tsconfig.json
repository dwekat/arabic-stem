{
  "compilerOptions": {
    "target": "ES5",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "es5",
      "es6",
      "dom",
      "dom.iterable"
    ],
    "outDir": "./dist",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "declaration": true
  },
  "include": [
    "src",
    "commitlint.config.js",
    "vite.config.js"
  ]
}
